{
	"name": "ai-dnd-expo",
	"type": "module",
	"expo": {
		"doctor": {
			"reactNativeDirectoryCheck": {
				"listUnknownPackages": false
			}
		}
	},
	"main": "expo-router/entry",
	"version": "1.1.3",
	"scripts": {
		"start": "expo start",
		"reset-project": "node ./scripts/reset-project.js",
		"android": "expo run:android",
		"ios": "expo run:ios",
		"web": "expo start --web",
		"lint": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"typecheck": "tsc --noEmit",
		"check": "npm run format && npm run lint && npm run typecheck && npx expo-doctor",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:services": "vitest run --config vitest.services.config.ts",
		"test:services:watch": "vitest --config vitest.services.config.ts",
		"test:services:coverage": "vitest run --coverage --config vitest.services.config.ts",
		"test:all": "npm run test && npm run test:services",
		"test:all:coverage": "npm run test:coverage && npm run test:services:coverage",
		"type-check": "tsc --noEmit",
		"build:local": "eas build --profile development",
		"build:development": "eas build --profile development",
		"build:staging": "eas build --profile staging",
		"build:production": "eas build --profile production",
		"deploy:development": "./scripts/deploy.sh deploy development",
		"deploy:staging": "./scripts/deploy.sh deploy staging",
		"deploy:production": "./scripts/deploy.sh deploy production",
		"submit:staging": "./scripts/deploy.sh submit staging",
		"submit:production": "./scripts/deploy.sh submit production",
		"postversion": "node -e \"import fs from 'fs'; const pkg = JSON.parse(fs.readFileSync('./package.json', 'utf8')); const app = JSON.parse(fs.readFileSync('./app.json', 'utf8')); app.expo.version = pkg.version; app.expo.runtimeVersion = pkg.version; app.expo.ios.buildNumber = String(parseInt(app.expo.ios.buildNumber) + 1); fs.writeFileSync('./app.json', JSON.stringify(app, null, 2) + '\\n');\""
	},
	"dependencies": {
		"@eslint/compat": "^1.2.8",
		"@expo/vector-icons": "^14.1.0",
		"@fugood/transformers": "^3.6.1-beta.1",
		"@react-native-async-storage/async-storage": "2.1.2",
		"@react-navigation/bottom-tabs": "^7.3.10",
		"@react-navigation/elements": "^2.3.8",
		"@react-navigation/native": "^7.1.6",
		"@shopify/react-native-skia": "v2.0.0-next.4",
		"@typescript-eslint/eslint-plugin": "^8.29.1",
		"buffer": "^6.0.3",
		"cactus-react-native": "^0.2.2",
		"eslint": "^9.24.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-native": "^5.0.0",
		"eslint-plugin-unicorn": "^58.0.0",
		"eslint-plugin-unused-imports": "^4.1.4",
		"expo": "~53.0.17",
		"expo-audio": "~0.4.8",
		"expo-blur": "~14.1.5",
		"expo-constants": "~17.1.7",
		"expo-dev-client": "~5.2.4",
		"expo-font": "~13.3.2",
		"expo-haptics": "~14.1.4",
		"expo-image": "~2.3.2",
		"expo-linking": "~7.1.7",
		"expo-router": "~5.1.3",
		"expo-speech": "~13.1.7",
		"expo-speech-recognition": "^2.1.1",
		"expo-splash-screen": "~0.30.10",
		"expo-status-bar": "~2.2.3",
		"expo-symbols": "~0.4.5",
		"expo-system-ui": "~5.0.10",
		"expo-three": "^8.0.0",
		"expo-updates": "~0.28.17",
		"expo-web-browser": "~14.2.0",
		"onnxruntime-common": "^1.22.0",
		"onnxruntime-react-native": "^1.22.0",
		"react": "19.0.0",
		"react-dom": "19.0.0",
		"react-native": "0.79.5",
		"react-native-feather": "^1.1.2",
		"react-native-gesture-handler": "~2.24.0",
		"react-native-reanimated": "~3.17.4",
		"react-native-safe-area-context": "5.4.0",
		"react-native-screens": "~4.11.1",
		"react-native-svg": "15.11.2",
		"react-native-web": "~0.20.0",
		"react-native-webview": "13.13.5",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@babel/core": "^7.25.2",
		"@types/react": "~19.0.10",
		"@vitejs/plugin-react": "^4.6.0",
		"@vitest/coverage-v8": "^3.2.4",
		"eslint": "^9.25.0",
		"eslint-config-expo": "~9.2.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-prettier": "^5.5.1",
		"jiti": "^2.4.2",
		"jsdom": "^26.1.0",
		"prettier": "^3.6.2",
		"typescript": "~5.8.3",
		"vite": "^7.0.4",
		"vitest": "^3.2.4",
		"vitest-react-native": "^0.1.5"
	},
	"eslintConfig": {
		"extends": [
			"expo",
			"prettier"
		],
		"plugins": [
			"prettier"
		],
		"rules": {
			"react/display-name": "off",
			"react-native/no-raw-text": "off",
			"prettier/prettier": [
				"error",
				{
					"useTabs": true,
					"tabWidth": 4,
					"semi": true,
					"singleQuote": true,
					"trailingComma": "es5",
					"bracketSpacing": true,
					"arrowParens": "avoid",
					"endOfLine": "lf",
					"printWidth": 100
				}
			]
		}
	},
	"private": true
}
