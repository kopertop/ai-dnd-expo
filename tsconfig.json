{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"./tanstack-app/src/*"
			],
			"@/*": [
				"./*"
			],
			"@/api/*": [
				"./api/*"
			],
			"@/assets/*": [
				"./assets/*"
			],
			"@/components/*": [
				"./components/*"
			],
			"@/constants/*": [
				"./constants/*"
			],
			"@/contexts/*": [
				"./contexts/*"
			],
			"@/hooks/*": [
				"./hooks/*"
			],
			"@/shared/*": [
				"./shared/*"
			],
			"@/styles/*": [
				"./styles/*"
			],
			"@/services/*": [
				"./services/*"
			],
			"@/types/*": [
				"./types/*"
			],
			"@/utils/*": [
				"./utils/*"
			]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.d.ts",
		".expo/types/**/*.ts",
		"expo-env.d.ts"
	],
	"exclude": [
		"node_modules",
		"tests/**/*",
		"ai-training/llama.cpp/**/*",
		"components/cactus.ts",
		"hooks/use-cactus-dungeon-master.ts",
		"services/ai/providers/cactus-*.ts",
		"services/ai/agents/cactus-*.ts"
	]
}
