# Environment Configuration Example
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files to version control

# Environment
EXPO_PUBLIC_ENVIRONMENT=development

# API Configuration
EXPO_PUBLIC_API_BASE_URL=https://api.aidnd.dev
EXPO_PUBLIC_WS_BASE_URL=wss://ws.aidnd.dev

# AI Services (These should be server-side only in production)
# For development only - move to secure server environment for production
EXPO_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here
EXPO_PUBLIC_ANTHROPIC_API_KEY=your_anthropic_api_key_here
EXPO_PUBLIC_RESEMBLE_API_KEY=your_resemble_api_key_here
EXPO_PUBLIC_FLUX_API_KEY=your_flux_api_key_here

# App Configuration
EXPO_PUBLIC_APP_NAME=AI D&D Platform
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_DEBUG_MODE=true

# Feature Flags
EXPO_PUBLIC_ENABLE_AI_DM=true
EXPO_PUBLIC_ENABLE_VOICE_SYNTHESIS=true
EXPO_PUBLIC_ENABLE_IMAGE_GENERATION=true
EXPO_PUBLIC_ENABLE_MULTIPLAYER=true

# Analytics & Monitoring
EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
EXPO_PUBLIC_ANALYTICS_ID=your_analytics_id_here

# Database Configuration (for future backend)
DATABASE_URL=postgresql://username:password@localhost:5432/aidnd_dev
REDIS_URL=redis://localhost:6379

# Authentication (for future implementation)
JWT_SECRET=your_jwt_secret_here
GOOGLE_CLIENT_ID=your_google_client_id_here
APPLE_CLIENT_ID=your_apple_client_id_here

# File Storage
EXPO_PUBLIC_STORAGE_BUCKET=aidnd-storage
EXPO_PUBLIC_CDN_URL=https://cdn.aidnd.dev